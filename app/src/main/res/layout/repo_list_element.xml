<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ListCard"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/child_padding"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/repo_list_element_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="@dimen/text_large"
            tools:text="Canada / maple"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/repo_list_element_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="@dimen/text_small"
            tools:text="Beautiful British Columbia"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/star_grey"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/repo_list_element_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:textSize="@dimen/text_small"
                tools:text="500"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/fork_grey"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/repo_list_element_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textSize="@dimen/text_small"
                tools:text="124"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/repo_list_element_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                tools:text="JavaScript"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>