<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textNormal</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">@dimen/login_button_width</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:background">@drawable/login_button_statelist</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="FeedEntryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/feed_entry_height</item>
        <item name="android:padding">@dimen/feed_entry_padding</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PopUpMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="TitleCollapsed">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleExpanded">
        <item name="android:textColor">#00FFFFFF</item>
    </style>

    <style name="OverviewLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/child_padding</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="OverviewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverviewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>
